<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/black_shade_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Recipe Title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/id_iv_delete"/>

        <TextView
            android:id="@+id/id_tv_recipe_time_stamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_tv_recipe_title"
            android:layout_margin="4dp"
            android:text="TimeStamp"
            android:textColor="@color/white"
            android:padding="4dp"
            android:layout_toLeftOf="@id/id_iv_delete"/>

        <ImageView
            android:id="@+id/id_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            app:tint="@color/white"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>




</androidx.cardview.widget.CardView>